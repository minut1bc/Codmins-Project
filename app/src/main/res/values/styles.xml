    <!-- Base application theme. -->
    <style name="AppThemeHome" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/home_bg</item>
        <item name="colorPrimaryDark">@color/home_bg</item>

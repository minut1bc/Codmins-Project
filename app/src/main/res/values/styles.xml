<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="KeyboardViewStyle" parent="@android:style/Widget.KeyboardView">
        <item name="android:paddingTop">2.0dip</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:keyBackground">@android:color/transparent</item>
        <item name="android:keyTextColor">@android:color/transparent</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/home_bg</item>
        <item name="android:textColorPrimary">#000000</item>
        <item name="android:background">#ffffff</item>
    </style>

</resources>

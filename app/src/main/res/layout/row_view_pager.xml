<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">


    <ImageView
        android:id="@+id/ivKeyboardBg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@drawable/theme_color1" />


    <LinearLayout
        android:id="@+id/rlEmoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivAbc"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:src="@drawable/icon_message"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/ivEmoji"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="2dp"
            android:src="@drawable/ic_smile" />

        <ImageView
            android:id="@+id/ivArt"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_margin="2dp"
            android:src="@drawable/art_keyboard"
            android:tint="@color/white" />

        <ImageView
            android:id="@+id/ivgooglesearch"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_margin="2dp"
            android:src="@drawable/icons_search" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlEmoji"
        android:layout_margin="3dp"
        android:orientation="vertical"
        android:weightSum="4">

        <LinearLayout
            android:id="@+id/linFirstRowKeyboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:id="@+id/txtQ"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="Q"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtW"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="W"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtE"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="E"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtR"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="R"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtT"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="T"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtY"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="Y"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtU"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="U"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtI"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="I"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtO"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="O"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/txtP"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="P"
                android:textColor="@android:color/white" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linTwoRowKeyboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="10">

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="A"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="S"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="D"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="F"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="G"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="H"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="J"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="K"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="L"
                android:textColor="@android:color/white" />


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="0.5" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linThreeRowKeyboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="10">

            <ImageView
                android:id="@+id/ivShift"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1.5"
                android:background="@drawable/key_bg"
                android:src="@drawable/ic_lowercase" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="Z"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="X"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="C"
                android:textColor="@android:color/white" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="V"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="B"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="N"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="M"
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/ivCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1.5"
                android:background="@drawable/key_bg"
                android:src="@drawable/ic_cancel" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linFourRowKeyboard"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="10">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1.5"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="123"
                android:textColor="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text=","
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/ivSpace"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="5"
                android:background="@drawable/key_bg"
                android:scaleType="fitXY"
                android:src="@drawable/ic_space" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@drawable/key_bg"
                android:gravity="center"
                android:padding="5dp"
                android:text="."
                android:textColor="@android:color/white" />

            <ImageView
                android:id="@+id/ivDone"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="1dp"
                android:layout_weight="1.5"
                android:background="@drawable/key_bg"
                android:src="@drawable/ic_subdirectory_arrow_left_black_24dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>






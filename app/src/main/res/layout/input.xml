<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linKeyboard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/rlEmoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#80000000">

        <ImageView
            android:id="@+id/ivAbc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_textmessage"
            android:tint="@color/silver" />

        <ImageView
            android:id="@+id/ivEmoji"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_smile"
            android:tint="@color/silver" />

        <ImageView
            android:id="@+id/ivArt"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_color_dish"
            android:tint="@color/silver" />

        <ImageView
            android:id="@+id/ivgooglesearch"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="2dp"
            android:contentDescription="TODO"
            android:src="@drawable/ic_megnify"
            android:tint="@color/silver" />

    </LinearLayout>

    <FrameLayout
        android:id="@+id/frameKeyboard"
        android:layout_width="wrap_content"
        android:layout_height="213dp">

        <com.codminskeyboards.universekeyboard.customkeyboard.LatinKeyboardView
            android:id="@+id/keyboard"
            style="@style/Widget.KeyboardView10"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="3dp"
            android:background="@android:color/transparent"
            android:popupLayout="@layout/keyboard_popup_layout"
            android:keyPreviewLayout="@layout/preview" />

        <RelativeLayout
            android:id="@+id/linEmoji"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#60000000"
            android:orientation="vertical"
            android:visibility="gone">

            <GridView
                android:id="@+id/gvEmoji"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/linCategory"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:gravity="center"
                android:horizontalSpacing="5dp"
                android:numColumns="10"
                android:scrollbars="none"
                android:verticalSpacing="8dp" />

            <LinearLayout
                android:id="@+id/linCategory"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_alignParentBottom="true"
                android:background="#80000000"
                android:padding="3dp">

                <ImageView
                    android:id="@+id/ivSmile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_smile_bold" />

                <ImageView
                    android:id="@+id/ivAnimal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_animal"
                    android:tint="@color/silver" />

                <ImageView
                    android:id="@+id/ivLamp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_lamp"
                    android:tint="@color/silver" />

                <ImageView
                    android:id="@+id/ivFood"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_food"
                    android:tint="@color/silver" />

                <ImageView
                    android:id="@+id/ivSocial"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_building"
                    android:tint="@color/silver" />

                <ImageView
                    android:id="@+id/ivCancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:contentDescription="TODO"
                    android:src="@drawable/ic_backspace"
                    android:tint="@color/silver" />
            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_art_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="3dp"
            android:background="@android:color/transparent"
            android:gravity="center"
            android:scrollbars="none"
            android:visibility="gone" />

    </FrameLayout>

</LinearLayout>
